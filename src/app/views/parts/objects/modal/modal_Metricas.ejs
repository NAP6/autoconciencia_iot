<div class="modal fullscreen-modal fade" id="modal_agregar_metrica" tabindex="-1" aria-labelledby="modal_agregar_entidadLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Metricas para evaluar aspectos de autoconsciencia
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
            </div>
            <div class="modal-body">
                <h5>Objeto: <span id="nombreEntidadActiva2"></span></h5>
                <br>
                <h5>Aspecto: <span id="nombreAspecto"></span></h5>
                <br>
                <h5>Listado de métricas</h5>
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-primary" onclick="activarFormularioAgregarMetrica()">Agregar</button>
                        <button class="btn btn-primary" onclick="eliminar_metrica()">Eliminar</button>
                        <br>
                        <br>
                        <div class="col">
                            <table class="table table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">ID</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Tipo</th>
                                        <th scope="col">Abreviatura</th>
                                        <th scope="col">Activo</th>
                                    </tr>
                                </thead>
                                <tbody id="tabla_aspectos_Metrica"></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-default">Nombre</span>
                            </div>
                            <input name="form_entidad_new" id="nombreMetrica" type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" disabled onkeyup="javascript:this.value=this.value.toUpperCase();" />
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-default">Descripción</span>
                            </div>
                            <textarea type="text" name="form_entidad_new" id="descripcionMetrica" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" disabled onkeyup="javascript:this.value=this.value.toUpperCase();"></textarea>
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-default">Abreviatura</span>
                            </div>
                            <input type="text" name="form_entidad_new" id="abreviaturaMetrica" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" disabled onkeyup="javascript:this.value=this.value.toUpperCase();" />
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Escala: </label>
                            </div>
                            <select class="custom-select" name="form_entidad_new" id="escalas_seccion_entidad" disabled></select>
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Unidad de Medida: </label>
                            </div>
                            <select class="custom-select" name="form_entidad_new" id="unidad_medida_metrica" disabled></select>
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Tipo: </label>
                            </div>
                            <select class="custom-select" name="tipo_metrica" id="tipo_metrica" disabled>
                            <option value="0">Directa</option>
                            <option value="1">Indirecta</option>
                            <option value="1">Indicador</option>
                          </select>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">Activo:</div>
                            <div class="col-sm-10">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="activoMetrica" disabled>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary" id="btn-agregarMetrica" onclick="GuardarMetrica()" disabled>
            Guardar
          </button>
                        <button class="btn btn-primary" id="btn-CancelarMetrica" onclick="desactivarFormularioAgregarMetrica()" disabled>
            Cancelar
          </button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
        Cancelar
      </button>
            </div>
        </div>
    </div>
</div>