<section class="crear_modelo">
    <form action="/save_new_model" method="POST" enctype="multipart/form-data">
        <div class="container">
            <div class="form-group">
                <label for="nombre_modelo">Nombre del modelo</label>
                <input type="text" class="form-control" id="nombre_modelo" name="nombre_modelo">
            </div>
            <div class="form-group">
                <label for="descripcion_ecenario">Descripcion del modelo</label>
                <input type="text" class="form-control" id="descripcion_esenario" name="descripcion_ecenario">
            </div>
            <div class="form-group">
                <label for="autor_modelo">Autor</label>
                <input type="text" class="form-control" id="autor_modelo" name="autor_modelo">
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="form_entidad_new" id="ModeloActivo" />
                    <label class="form-check-label" for="ModeloActivo">
                      Activo
                    </label>
                </div>
            </div>
            <div class="input-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="file_modelo_xmi" name="file_modelo_xmi">
                    <label class="custom-file-label" for="inputGroupFile04">Seleccionar Archivo</label>
                </div>
            </div>


            <br>
            <div class="text-center">
                <button id="btn_crear_modelo" class="btn btn-primary" type="submit">Crear</button>
            </div>
        </div>
    </form>
</section>