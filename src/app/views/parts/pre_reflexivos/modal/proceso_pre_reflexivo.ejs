<div class="container" id="pagina_proceso">
    <div class="row">
        <div class="col">
            <input type="text" class="d-none" id="id_proceso_pre_reflexivo">
            <input type="text" class="d-none" id="id_metodo_aprendizaje_directo">
            <div class="form-group mt-4 row">
                <label for="" class="col-sm-2 col-form-label">Nombre:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="input-name-proceso-pre-reflexivo" style=" text-transform:uppercase;" onkeyup="javascript:this.value=this.value.toUpperCase(); " />
                </div>
            </div>

            <div class="form-group row ">
                <label for=" " class="col-sm-2 col-form-label ">Descripcion:</label>
                <div class="col-sm-10 ">
                    <textarea type="text " class="form-control " id="input-descripcion-proceso-pre-reflexivo" style="text-transform:uppercase; " onkeyup="javascript:this.value=this.value.toUpperCase(); "></textarea>
                </div>
            </div>


        </div>
        <div class="col">
            <h6>Periodo de ejecucion:</h6>
            <div class="col card" style="height: 115px;">
                <div class="form-group mt-2 row">
                    <label for="" class="col-sm-2 col-form-label">Inicio:</label>
                    <input type="date" id="inicio_del_periodo" name="inicio_del_periodo" value="" min="2020-01-01" max="2050-01-01">
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Fin:</label>
                    <input type="date" id="fin_del_periodo" name="fin_del_periodo" value="" min="2020-01-01" max="2050-01-01">
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-6">
            <h6>Sujetos de autoconsciencia:</h6>
            <div id="sujetos_activos_proceso" class="card col-12 col-lg-10" style="overflow-y: auto;height: 166px;">
                <ul id="lista_sujetos_activos_proceso"></ul>
            </div>

        </div>
        <div class="col-6">
            <h6>Categoría de objetos:</h6>
            <div class="input-group col-11">
                <select class="custom-select" name="CategoriaEntidadesProcesos" id="CategoriaEntidadesProcesos" disabled>
                                <option>Seleccione..</option>
                              <option id="1" value="1">Entidades Físicas</option>
                              <option value="2">Nodos Cloud</option>
                              <option value="3">Nodos Fog</option>
                              <option value="4">Gateway IoT</option>
                              <option value="5">Sensores</option>
                              <option value="6">Tags</option>
                              <option value="7">Actuadores</option>
                              <option value="8">Red</option>
                            </select>
            </div>
            <h6>Objeto de autoconsciencia:</h6>
            <div class="col-sm-11">
                <div id="entidades_seleccionados_area_procesos" class="card col-lg-12" style="overflow-y: auto;height: 100px;">
                    <ul id="lista_entidades_seleccionadas_procesos"></ul>
                </div>
            </div>
        </div>
    </div>
    <h6 class="text-center">Aspectos de autoconsciencia</h6>
    <div class="input-group col-11">
        <select class="custom-select" name="Aspectos_autoconsciencia" id="Aspectos_autoconsciencia" disabled>
                    </select>
    </div>
    <%- include('modal_metodo_modelos'); %>
</div>
<div class="modal-footer">
    <button type="button" id="btn-guarda_procesos_pre" class="btn btn-primary inline-block" onclick="guardar_procesos_pre_reflexivos()">Guardar Proceso Pre-reflexivo</button>
    <button type="button" id="btn-guardar_modelos_metodos" class="btn btn-primary d-none" onclick="guardar_modelos_metodos()">Guardar</button>
