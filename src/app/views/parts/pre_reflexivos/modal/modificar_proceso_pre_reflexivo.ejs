<div id="pagina_proceso_modificar">
  <div class="row">
    <div class="col">
      <input
        type="text"
        class="d-none"
        id="id_proceso_pre_reflexivo_modificar"
        value="<%=modificar[0].id%>"
      />
      <input
        type="text"
        class="d-none"
        id="id_sujeto"
        value="<%=modificar[0].sujeto%>"
      />
      <div class="form-group row">
        <label for="" class="col-sm-3 col-form-label">ID:</label>
        <div class="col-sm-7">
          <input
            type="text"
            class="form-control"
            id="input-name-proceso-pre-reflexivo_modificar"
            value="<%=modificar[0].nombre%>"
            disabled
          />
        </div>
      </div>
      <div class="form-group row">
        <label for="" class="col-sm-3 col-form-label">Descripción:</label>
        <div class="col-sm-7">
          <textarea
            type="text"
            class="form-control"
            id="input-descripcion-proceso-pre-reflexivo"
            style="text-transform: uppercase"
            onkeyup="javascript:this.value=this.value.toUpperCase();"
          >
	  <%=modificar[0].descripcion%>
	  </textarea
          >
        </div>
      </div>
      <div class="form-group row">
        <label for="" class="col-sm-3 col-form-label">Tipo Ejecución:</label>
        <div class="form-group col-7">
          <select
            class="custom-select"
            name="tipo_ejecucion_modificar"
            id="tipo_ejecucion_modificar"
	    disabled
          >
	  <option value="<%=modificar[0].pa_tipo_ejecucion%>"><%=modificar[0].tipo_ejecucion%></option>
          </select>
        </div>
      </div>
      <h6>Periodo de ejecución:</h6>
      <div class="col card" style="height: 55px">
        <div class="form-group mt-2 row">
          <label class="col-sm-2 col-form-label">Inicio:</label>
          <input
            type="date"
            id="inicio_del_periodo_modificar"
            name="inicio_del_periodo_modificar"
            min="2020-01-01"
            max="2050-01-01"
            value="<%=modificar[0].inicio%>"
	    disabled
          />
          <label for="" class="col-sm-2 col-form-label">Fin:</label>
          <input
            type="date"
            id="fin_del_periodo_modificar"
            name="fin_del_periodo_modificar"
            min="2020-01-01"
            max="2050-01-01"
            value="<%=modificar[0].fin%>"
	    disabled
          />
        </div>
      </div>
      <h6>Frecuencia de ejecución</h6>
      <div class="row">
        <div class="col-md-4">
          <div class="mt-2">
            <h6>Unidad de Tiempo:</h6>
            <div class="form-group mt-1 col-12">
              <select
                class="custom-select"
                name="unidad_tiempo_modificar"
                id="unidad_tiempo_modificar"
		disabled
              >
	      <option value="<%modificar[0].pa_unidad_tiempo%>"><%=modificar[0].unidad_tiempo%></option>
              </select>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="mt-2">
            <h6>Intervalo de ejecución:</h6>
            <div class="input-group col-12">
              <input
                type="number"
                min="0"
                class="form-control"
                name="intervalo_ejecucion_modificar"
                id="intervalo_ejecucion_modificar"
		disabled
		value="<%=modificar[0].pa_intervalo_ejecucion%>"
              />
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="mt-2">
            <h6>Hora ejecución:</h6>
            <div class="form-group mt-1 col-12">
              <input
                type="time"
                class="form-control"
                name="hora_ejecucion_modificar"
                id="hora_ejecucion_modificar"
		value="<%=modificar[0].pa_hora_ejecucion%>"
		disabled
              />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-6">
      <h6>Sujeto que ejecuta el proceso:</h6>
      <div
        id="sujetos_activos_proceso_modificar"
        class="card col-12 col-lg-10"
        style="overflow-y: auto; height: 70px"
      >
        <h5><%=modificar[0].sujeto_nombre%></h5>
      </div>
      <h6>Aspecto de autoconsciencia a capturar:</h6>
      <div class="input-group col-12">
        <select
          class="custom-select"
          name="Aspectos_autoconsciencia_modificar"
          id="Aspectos_autoconsciencia_modificar"
          disabled
        >
	<option value="<%=modificar[0].aspecto%>"><%=modificar[0].aspecto_nombre%></option>
	</select>
      </div>
      <div class="mt-2">
        <h6>Categoría de objetos:</h6>
        <div class="form-group mt-1 col-12">
          <select
            class="custom-select"
            name="CategoriaEntidadesProcesosModificar"
            id="CategoriaEntidadesProcesosModificar"
            disabled
          >
<option value=""><%= modificar[0].categoria %></option>
	  </select>
        </div>
      </div>
      <h6>Objetos sobre los que se captura el aspecto autoconsciencia:</h6>
      <div class="col-sm-11">
        <div
          id="entidades_seleccionados_area_procesos_modificar"
          class="card col-lg-12"
          style="overflow-y: auto; height: 90px"
        >
          <ul id="lista_entidades_seleccionadas_procesos_modificar">
		<% for(let obj of modificar) { %>
			<li><%=obj.nombre_objeto%></li>
		<% } %>
	  </ul>
        </div>
      </div>
    </div>
  </div>
</div>
