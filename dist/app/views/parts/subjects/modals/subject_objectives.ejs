<div class="modal fade" id="objetosde_sujetoModal" tabindex="-1" aria-labelledby="objetosde_sujetoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" style="width: 100%;">
                    Objetivos del sujeto de autoconsciencia
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
            </div>
            <div class="modal-body">
                <h6>Sujeto: <span id="nombreSujetoObjetoActivo"></span></h6>
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-primary" onclick="activarFormularioAgregarObjeto()">
              Agregar
            </button>
                        <button class="btn btn-primary" onclick="eliminarObjeto()">
              Eliminar
            </button>
                        <h6 class="mt-4">Árbol de objetivos:</h6>
                        <div id="arbol_objetivos_del_sujeto"></div>
                    </div>
                    <div class="col-6">
                        <input type="text" name="idPadreObjeto" id="idPadreObjeto" class="d-none" readonly />
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-default1">Nombre</span
                >
              </div>
              <input
                name="nombreObjeto"
                id="nombreObjeto"
                type="text"
                class="form-control"
                aria-label="Default"
                aria-describedby="inputGroup-sizing-default1"
                disabled
                style="  "
                 
              />
            </div>
            <div class="input-group mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default2"
                  >Descripción</span
                >
              </div>
              <textarea
                type="text"
                name="descripcionObjeto"
                id="descripcionObjeto"
                class="form-control"
                aria-label="Default"
                aria-describedby="inputGroup-sizing-default3"
                style="  "
                 
                disabled
              ></textarea>
            </div>
            <div class="input-group mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default3"
                  >Peso</span
                >
              </div>
              <input
                type="number"
                name="pesoObjeto"
                id="pesoObjeto"
                class="form-control"
                aria-label="Default"
                aria-describedby="inputGroup-sizing-default3"
                disabled
              />
            </div>
            <div class="input-group mb-4">
              <div class="input-group-prepend">
                <label class="input-group-text" for="operadorAsigObjetos"
                  >Operador de asignacion</label
                >
              </div>
              <select
                class="custom-select"
                name="operadorAsigObjetos"
                id="operadorAsigObjetos"
                disabled>
              </select>
            </div>


            <div class="input-group mb-4">
              <div class="input-group-prepend">
                <label class="input-group-text" for="operadorAsigObjetos"
                  >Criterio de decisión</label>
              </div>
              <select
                class="custom-select"
                name="criterios_objetivos"
                id="criterios_objetivos"
                disabled>
              </select>
            </div>
            <div class="form-group">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="activoObjeto"
                    id="activoObjeto"
                   disabled
                  checked
                />
                <label class="form-check-label" for="activoObjeto">
                  Activo
                </label>
              </div>
            </div>
            <button
              class="btn btn-primary"
              id="btn-agregarObjetoLista"
              onclick="agregarObjeto()"
            >
              Guardar
            </button>
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Cancelar
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>