<div class="modal fade" id="modal_escenarios_simulacion" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" style="width: 100%;" id="exampleModalLabel">
                    Escenario de simulación
                </h5>
                <button type="button" class="close" onclick="cerrar_modal_escenarios_simulacion()" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <button id="bt_add_escenario_simulacion" class="btn btn-primary" onclick="agregar_escenario_simulacion()">
                    Agregar
                  </button>
                        <button id="bd_mod_escenario_simulacion" class="btn btn-primary" onclick="modificar_escenario_simulacion()">
                    Modificar
                  </button>
                        <button id="bd_del_escenario_simulacion" class="btn btn-primary" onclick="eliminar_escenario_simulacion()">
                    Eliminar
                  </button>
                    </div>
                </div>
                <div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Id</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Activo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tbody id="tabla_escenarios">
                            </tbody>
                        </tbody>
                    </table>
                </div>
                <h6>Variables y valores de simulación</h6>
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <button id="bt_add_variables_valor" class="btn btn-primary d-none" onclick="agregar_variables_valor()">
                    Agregar
                  </button>
                        <button id="bd_mod_variables_valor" class="btn btn-primary d-none" onclick="modificar_variables_valor()">
                    Modificar
                  </button>
                        <button id="bd_del_variables_valor" class="btn btn-primary d-none" onclick="eliminar_variables_valor()">
                    Eliminar
                  </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <table id="tabla_variables_valor_table" class="table table-hover d-none">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Variable</th>
                                    <th scope="col">Valor</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tbody id="tabla_variables_valores">
                                </tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="cerrar_modal_activos()">
          Cancelar
        </button>
            </div>
        </div>
    </div>
</div>
<%- include('modal_agregar_escenarios_simulacion'); %>
    <%- include('modal_agregar_variables_valor'); %>
        <%- include('modal_modificar_escenarios_simulacion'); %>
            <%- include('modal_agregar_variables_valor'); %>