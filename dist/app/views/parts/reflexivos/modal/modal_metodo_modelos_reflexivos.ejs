<div id="modal_metodo_reflexivos_add" class="container-fluid d-none">
  <nav class="mt-4">
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a
        class="nav-item nav-link active"
        id="nav-recoleccion-tab"
        data-toggle="tab"
        href="#nav-recoleccion"
        role="tab"
        aria-controls="nav-recoleccion"
        aria-selected="true"
        >Método de cálculo</a
      >
      <a
        class="nav-item nav-link"
        id="nav-modelo-tab"
        data-toggle="tab"
        href="#nav-modelo"
        role="tab"
        aria-controls="nav-modelo"
        aria-selected="false"
        >Modelo de análisis de datos</a
      >
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div
      class="tab-pane fade show active"
      id="nav-recoleccion"
      role="tabpanel"
      aria-labelledby="nav-recoleccion-tab"
    >
      <div class="row mt-3" id="formularios_divididos">
        <div class="col-12">
          <h6>Periodo de Datos</h6>
          <div
            class="col card input-group mb-2 mt-2"
            style="height: auto; width: auto"
          >
            <div class="input-group mb-2 mt-2">
              <div class="input-group-prepend">
                <label class="input-group-text">Unidad: </label>
              </div>
              <select
                class="custom-select"
                name="unidad_tiempo_ref2"
                id="unidad_tiempo_ref2"
              ></select>
            </div>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <label class="input-group-text">Intervalo: </label>
              </div>
	      <input type="number" min="0" id="intervalos_metodos_modelos" class="form-control"/>
            
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Inicio:</span>
              </div>
              <input
                type="date"
                class="form-control"
                placeholder="Username"
                aria-label="Username"
                aria-describedby="basic-addon1"
                min="2020-01-01"
                max="2050-01-01"
                id="inicio_metodos_reflexivos"
                name="inicio_metodos_reflexivos"
              />
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Fin:</span>
              </div>
              <input
                type="date"
                class="form-control"
                placeholder="Username"
                aria-label="Username"
                aria-describedby="basic-addon1"
                min="2020-01-01"
                max="2050-01-01"
                id="fin_metodos_reflexivos"
                name="fin_metodos_reflexivos"
              />
            </div>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <label class="input-group-text" id="">Tipo de recurso: </label>
            </div>
            <select
              class="custom-select"
              name="tipo_recurso_metodos_reflexivo"
              id="tipo_recurso_metodos_reflexivo"
              onchange="SeleccionaRecursoReflexivosMetodos(this)"
            >
              <option>Seleccione..</option>
              <option value="0">Fórmula</option>
              <option value="1">Función</option>
              <option value="2">Servicio</option>
            </select>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <label class="input-group-text" for="recurso">Recurso:</label>
            </div>
            <select
              class="custom-select"
              name="recurso_reflexivos"
              id="recurso_reflexivos"
              disabled
            ></select>
            <div class="input-group-append">
              <button
                class="btn btn-secondary"
                id="variables_simulacion"
                type="button"
                onclick="AbrirModalAgregarVariablesSimulacion();"
                disabled
              >
                Variables de simulación
              </button>
            </div>
            <div class="input-group-append">
              <button
                class="btn btn-secondary"
                id="escenario_simulacion"
                type="button"
                onclick="abrirModalEscenarioSimulacion();"
                disabled
              >
                Escenarios de simulación
              </button>
            </div>
            <div class="input-group-append">
              <button
                class="btn btn-secondary"
                id="mapeo_parametros_btn_metodos"
                type="button"
                onclick="abrirMapeoParametros_metodos();"
                disabled
              >
                Mapeo de parámetros
              </button>
            </div>
          </div>

          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <label class="input-group-text"
                >Métrica indirecta de salida:
              </label>
            </div>
            <select
              class="custom-select"
              name="metrica_indirecta_reflexivos"
              id="metrica_indirecta_reflexivos"
            ></select>
          </div>
        </div>
      </div>
    </div>
    <div
      class="tab-pane fade"
      id="nav-modelo"
      role="tabpanel"
      aria-labelledby="nav-modelo-tab"
    >
      <div class="row justify-content-center mt-3" id="formularios_divididos2">
        <div class="col-12">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <label class="input-group-text" id="">Tipo de recurso: </label>
            </div>
            <select
              class="custom-select"
              name="tipo_recurso_modelos_reflexivos"
              id="tipo_recurso_modelos_reflexivos"
              onchange="SeleccionaRecursoReflexivosModelos(this);"
            >
              <option>Seleccione..</option>
              <option value="0">Fórmula</option>
              <option value="1">Función</option>
              <option value="2">Servicio</option>
            </select>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <label class="input-group-text" for="recurso">Recurso:</label>
            </div>
            <select
              class="custom-select"
              name="recurso_modelos_reflexivos"
              id="recurso_modelos_reflexivos"
              disabled
            ></select>
            <div class="input-group-append">
              <button
                class="btn btn-secondary"
                id="mapeo_parametros_modelo"
                type="button"
                onclick="abrirMapeoParametros_modelos();"
                disabled
              >
                Mapeo de parámetros
              </button>
            </div>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <label class="input-group-text" id="">Indicador: </label>
            </div>
            <select
              class="custom-select"
              name="indicador_modelo_pre"
              id="indicador_modelo_pre"
            ></select>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <label class="input-group-text" for="criterio_de_decision_modelo"
                >Criterio de decisión:</label
              >
            </div>
            <select
              class="custom-select"
              name="criterio_de_decision_modelo"
              id="criterio_de_decision_modelo"
            ></select>
            <div class="input-group-append">
              <button
                class="btn btn-secondary"
                id="btn-recomendaciones_model"
                type="button"
                onclick="recomendaciones_procesos_reflexivos();"
                disabled
              >
                Recomendaciones prescriptivas
              </button>
            </div>
          </div>
        </div>
        <div class="col-5"></div>
      </div>
    </div>
  </div>
</div>
