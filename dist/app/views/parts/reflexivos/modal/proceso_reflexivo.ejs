<div class="" id="pagina_proceso_reflexivo">
  <div class="row">
    <div class="col-lg-6">
      <input type="text" class="d-none" id="id_proceso_reflexivo" />
      <input type="text" class="d-none" id="id_metodo_aprendizaje_modelos" />
      <input type="text" class="d-none" id="nombre_proceso_reflexivo" />
      <div class="form-group row">
        <label for=" " class="col-sm-3 col-form-label">ID:</label>
        <div class="col">
          <input
            type="text "
            class="form-control"
            id="nombre_proceso_reflexivo_id"
            style=" "
            disabled
          />
        </div>
      </div>

      <div class="form-group row">
        <label for=" " class="col-sm-3 col-form-label">Descripción:</label>
        <div class="col">
          <textarea
            type="text "
            class="form-control"
            id="descripcion_proceso_reflexivo"
            style=" "
          ></textarea>
        </div>
      </div>
      <div class="form-group row">
        <label for=" " class="col-sm-3 col-form-label">Tipo Ejecución:</label>
        <div class="form-group col">
          <select
            class="custom-select"
            name="tipo_ejecucion_ref"
            id="tipo_ejecucion_ref"
          >
            <option value="-6">Seleccione..</option>
          </select>
        </div>
      </div>
      <h6>Periodo de ejecucion:</h6>
      <div class="col card" style="height: 55px">
        <div class="form-group mt-2 row">
          <label for="" class="col-sm-2 col-form-label">Inicio:</label>
          <input
            type="date"
            id="inicio_del_periodo_reflexivo"
            name="inicio_del_periodoi_reflexivo"
            value=""
            min="2020-01-01"
            max="2050-01-01"
          />
          <label for="" class="col-sm-2 col-form-label">Fin:</label>
          <input
            type="date"
            id="fin_del_periodo_reflexivo"
            name="fin_del_periodo_reflexivo"
            value=""
            min="2020-01-01"
            max="2050-01-01"
          />
        </div>
      </div>
      <h6 class="mt-3">Frecuencia de ejecución</h6>
      <div class="card" style="height: 85px;">
      <div class="row">
        <div class="col">
          <div class="mt-1">
            <h6>Unidad de Tiempo:</h6>
            <div class="form-group col-12">
              <select
                class="custom-select"
                name="unidad_tiempo_ref"
                id="unidad_tiempo_ref"
              >
                <option value="-6">Seleccione..</option>
              </select>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="mt-2">
            <h6>Intervalo de ejecución:</h6>
            <div class="input-group col-12">
              <input
                type="number"
                min="0"
                class="form-control"
                name="intervalo_ejecucion_ref"
                id="intervalo_ejecucion_ref"
              />
            </div>
          </div>
        </div>
        <div class="col">
          <div class="mt-2">
            <h6>Hora ejecución:</h6>
            <div class="form-group mt-1 col-12">
              <input
                type="time"
                class="form-control"
                name="hora_ejecucion_ref"
                id="hora_ejecucion_ref"
              />
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
    <div class="col-6">
      <h6>Sujeto que ejecuta el proceso:</h6>
      <div
        id="sujetos_activos_proceso_reflexivos"
        class="card col"
        style="overflow-y: auto; height: 130px"
      >
        <ul id="lista_sujetos_activos_proceso_reflexivo"></ul>
      </div>
      <h6>Tipo:</h6>
      <div class="input-group col-12">
        <select
          class="custom-select"
          name="Aspectos_tipo_autoconsciencia_reflexivos"
          id="Aspectos_tipo_autoconsciencia_reflexivos"
	  onChange="seleccionar_tipo_reflexivo(this)"
          disabled
        >
          <option value="-6">Seleccione..</option>
          <option value="53">INDIVIDUAL</option>
          <option value="54">COLECTIVO</option>
	</select>
      </div>
       <h6>Nodo de computación en el que se ejecuta el proceso:</h6>
      <div class="input-group col-12">
        <select
          class="custom-select"
          name="nodo_ejecuta_proceso2"
          id="nodo_ejecuta_proceso2"
        ></select>
      </div>
      <h6>Aspecto de autoconsciencia a capturar:</h6>
      <div class="input-group col-12">
        <select
          class="custom-select"
          name="Aspectos_autoconsciencia_reflexivos"
          id="Aspectos_autoconsciencia_reflexivos"
          disabled
        ></select>
      </div>
        <h6 class="display_type">Categoría de objetos:</h6>
        <div class="form-group mt-1 col-12">
          <select
            class="custom-select display_type"
            name="CategoriaEntidadesProcesos_reflexivos"
            id="CategoriaEntidadesProcesos_reflexivos"
            disabled
          >
            <option value="-6">Seleccione..</option>
            <option id="1" value="1">Entidades Físicas</option>
            <option value="2">Nodos Cloud</option>
            <option value="3">Nodos Fog</option>
            <option value="4">Gateway IoT</option>
            <option value="5">Sensores</option>
            <option value="6">Tags</option>
            <option value="7">Actuadores</option>
            <option value="8">Red</option>
          </select>
        </div>
      <h6 class="display_type">
        Objetos sobre los que se captura el aspecto autoconsciencia:
      </h6>
      <div class="col display_type">
        <div
          id="entidades_seleccionados_area_procesos_reflexivos"
          class="card col-lg-12"
          style="overflow-y: auto; height: 90px"
        >
          <ul id="lista_entidades_seleccionadas_procesos_reflexivos"></ul>
        </div>
      </div>
    </div>
  </div>
</div>
