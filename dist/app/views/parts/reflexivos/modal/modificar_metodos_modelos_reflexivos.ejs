<div id="modal_metodo_mod_reflexivos" class="container-fluid">
    <nav class="mt-4">
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-recoleccion-tab" data-toggle="tab" href="#nav-recoleccion" role="tab" aria-controls="nav-recoleccion" aria-selected="true">
		    Método de cálculo
	    </a>
            <a class="nav-item nav-link" id="nav-modelo-tab" data-toggle="tab" href="#nav-modelo" role="tab" aria-controls="nav-modelo" aria-selected="false">
		    Modelo de análisis de datos
	    </a>
        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-recoleccion" role="tabpanel" aria-labelledby="nav-recoleccion-tab">
            <div class="row mt-3" id="formularios_divididos">
	    <input type="text" class="d-none" id="id_modelo_reflexivo"
	<% if(modificar2.length>0){ %>
        value="<%=modificar2[0].id_recoleccion%>"
	<% } %>
      />
                <div class="col-12">
	 <h6>Periodo de Datos</h6>
          <div
            class="col card input-group mb-2 mt-2"
            style="height: auto; width: auto"
          >
            <div class="input-group mb-2 mt-2">
              <div class="input-group-prepend">
                <label class="input-group-text">Unidad: </label>
              </div>
              <select
                class="custom-select"
                name="unidad_tiempo_ref2"
                id="unidad_tiempo_ref2_modificar"
		disabled
              >
			<option><%= modificar2[0].unidadT %></option>
	      </select>
            </div>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <label class="input-group-text">Intervalo: </label>
              </div>
	      <input type="number" min="0" id="intervalos_metodos_modelos_modificar" disabled class="form-control" value="<%= modificar2[0].intervalo %>"/>
            
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Inicio:</span>
              </div>
              <input
                type="date"
                class="form-control"
                placeholder="Username"
                aria-label="Username"
                aria-describedby="basic-addon1"
                id="inicio_metodos_reflexivos_modificar" disabled name="inicio_metodos_reflexivos_modificar" <% if(modificar2.length>0) { %> value="<%= modificar2[0].inicio %>" <% }%>
              />
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Fin:</span>
              </div>
              <input
                type="date"
                class="form-control"
                placeholder="Username"
                aria-label="Username"
                aria-describedby="basic-addon1"
                id="fin_metodos_reflexivos_modificar" disabled name="fin_metodos_reflexivos_modificar" <% if(modificar2.length>0){%> value="<%= modificar2[0].fin %>" <%}%>/>
            </div>
          </div>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <label class="input-group-text" id="">Tipo de recurso: </label>
                        </div>
                        <select class="custom-select" name="tipo_recurso_metodos_reflexivo_modificar" id="tipo_recurso_metodos_reflexivo_modificar" onchange="" disabled>
                            <% if(modificar2.length>0) {%>
			    <option value="0"  <% if(modificar2[0].tipo_recurso_metodo==0){ %>selected<% } %>>Fórmula</option>
                            <option value="1"  <% if(modificar2[0].tipo_recurso_metodo==1){ %>selected<% } %>>Función</option>
                            <option value="2"  <% if(modificar2[0].tipo_recurso_metodo==2){ %>selected<% } %>>Servicio</option>
                  	<%}%>
			</select>
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="recurso">Recurso:</label>
                        </div>
                        <select class="custom-select" name="recurso_reflexivos_modificar" id="recurso_reflexivos_modificar" disabled>
			
                            <% if(modificar4[0]) {%>
			<option><%= modificar4[0].nombre_recurso %></option>
			<%}%>
					</select>
                        <div class="input-group-append">
                            <button class="btn btn-secondary" id="variables_simulacion_modificar" type="button" onclick="AbrirModalAgregarVariablesSimulacionModificar();">
				    Variables de simulación
			    </button>
                        </div>
                        <div class="input-group-append">
                            <button class="btn btn-secondary" id="escenario_simulacion_modificar" type="button" onclick="abrirModalEscenarioSimulacionModificar();">
				    Escenarios de simulación
			    </button>
                        </div>
                        <div class="input-group-append">
                            <button class="btn btn-secondary" id="mapeo_parametros_btn_metodos_modificar" type="button" onclick="abrirMapeoParametros_metodos_modificar();">
				    Mapeo de parámetros
			    </button>
                        </div>
                    </div>

                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Métrica indirecta de salida: </label>
                        </div>
                        <select class="custom-select" disabled name="metrica_indirecta_reflexivos_modificar" id="metrica_indirecta_reflexivos_modificar">
                            <% if(modificar2.length > 0) {%>
			    <option value=""><%= modificar2[0].metrica_metodo_nombre %></option>
			    <%}%>
                  	</select>
                    </div>

                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="nav-modelo" role="tabpanel" aria-labelledby="nav-modelo-tab">
            <div class=" row justify-content-center mt-3" id="formularios_divididos2">
                <div class="col-12">
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <label class="input-group-text" id="">Tipo de recurso: </label>
                        </div>
                        <select class="custom-select" name="tipo_recurso_modelos_reflexivos_modificar" id="tipo_recurso_modelos_reflexivos_moficar" disabled>
                           <% if(modificar2.length>0) {%>
			   <option value="0"  <% if(modificar2[0].tipo_recurso==0){ %>selected<% } %>>Fórmula</option>
                            <option value="1"  <% if(modificar2[0].tipo_recurso==1){ %>selected<% } %>>Función</option>
                            <option value="2"  <% if(modificar2[0].tipo_recurso==2){ %>selected<% } %>>Servicio</option>
			    <%}%>
                  	</select>
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="recurso">Recurso:</label>
                        </div>
                        <select class="custom-select" name="recurso_modelos_reflexivos_modificar" id="recurso_modelos_reflexivos_modificar" disabled>
			<% if (modificar3[0]) {%>
			<option value="0" <%= modificar3[0].ri_id == 0 %> ><%= modificar3[0].nombre_recurso %></option>
			<% } %>
			</select>
                        <div class="input-group-append">
                            <button class="btn btn-secondary" id="mapeo_parametros_modelo_modificar" type="button" onclick="abrirModalMapeoParametros_modificar();">
				    Mapeo de parámetros
			    </button>
                        </div>
                    </div>
                    <div class="input-group mb-2">
		<input
        type="text"
        class="d-none"
        id="id_metodo_aprendizaje_modificar"
        value="<%=modificar2[0].id_modelo%>"
      />
                        <div class="input-group-prepend">
                            <label class="input-group-text" id="">Indicador: </label>
                        </div>
                        <select class="custom-select" name="indicador_modelo_modificar" disabled id="indicador_modelo_modificar">
			<% if (modificar2.length>0){%>
				<option value="<%= modificar.indircador_id%>"><%= modificar2[0].metrica_modelo_nombre%></option>
				<%}%>
                  	</select>
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="criterio_de_decision_modelo_modificar">Criterio de decisión:</label>
                        </div>
                        <select class="custom-select" name="criterio_de_decision_modelo_modificar" id="criterio_de_decision_modelo_modificar" disabled>
			<%if(modificar2.length>0){%>
                            <option value="<%= modificar2[0].criterio_id %>"><%= modificar2[0].criterio_nombre %></option>
			    <%}%>
                  	</select>
                        <div class="input-group-append">
                            <button class="btn btn-secondary" id="btn-recomendaciones_model_modificar" type="button" onclick="abrirModalRecomendaciones_modificar_reflexivos()">
				    Recomendaciones prescriptivas
			    </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<%- include('../../pre_reflexivos/modal/modal_modificar_mapeo_parametros'); %>
