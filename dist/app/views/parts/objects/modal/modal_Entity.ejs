<div class="modal fullscreen-modal fade" id="modal_agregar_entidad" tabindex="-1" aria-labelledby="modal_agregar_entidadLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" style="width: 100%;">
                    Aspectos de Autoconsciencia
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
            </div>
            <div class="modal-body">
                <h6>Objeto: <span id="nombreEntidadActiva"></span></h6>
                <div class="justify-content-start">
                    <div class="mx-3 mt-3">
                        <button class="btn btn-primary" onclick="activarFormularioAgregarEntidad()">Agregar</button>
                        <button class="btn btn-primary" onclick="EliminarAspecto()">Eliminar</button>
                        <button id="bd_del_aspecto" class="btn btn-primary" onclick="Administrar_Metricas()"> Administrar Métricas</button>

                    </div>
                </div>
                <div class="row my-3">
                    <div class="col-6">
                        <div class="col">
                            <table class="table table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">ID</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Tipo</th>
                                        <th scope="col">Activo</th>
                                    </tr>
                                </thead>
                                <tbody id="tabla_aspectos"></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-6">
                        <span id="idPadreEntidad"></span>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-default">Nombre</span
              >
            </div>
            <input
              name="form_entidad_new"
              id="nombreEntidad"
              type="text"
              class="form-control"
              aria-label="Default"
              aria-describedby="inputGroup-sizing-default"
              disabled
               
            />
          </div>
          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default"
                >Descripción</span
              >
            </div>
            <textarea
              type="text"
              name="form_entidad_new"
              id="descripcionEntidad"
              class="form-control"
              aria-label="Default"
              aria-describedby="inputGroup-sizing-default"
              disabled
               
            ></textarea>
          </div>
          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <label class="input-group-text" for="inputGroupSelect01"
                >Tipo </label
              >
            </div>
            <select
            class="custom-select"
            name="tipo_aspectos"
            id="tipo_aspectos"
            disabled>
          </select>
          </div>
          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default"
                >Peso</span
              >
            </div>
            <input
              type="text"
              name="form_entidad_new"
              id="PesoEntidad"
              class="form-control"
              aria-label="Default"
              aria-describedby="inputGroup-sizing-default"
              disabled
            />
          </div>
  
          <div class="form-group row">
            <div class="col-sm-2">Activo:</div>
            <div class="col-sm-10">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="activoEntidad" disabled checked>
              </div>
            </div>
          </div>
          <button class="btn btn-primary" id="btn-agregarEntidadLista" onclick="agregarAspecto()">
            Guardar
          </button>
          <button class="btn btn-primary" id="btn-CancelarEntidadLista" onclick="desactivarFormularioAgregarEntidad()">
            Cancelar
          </button>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">
        Cancelar
      </button>
    </div>
  </div>
</div>
</div>